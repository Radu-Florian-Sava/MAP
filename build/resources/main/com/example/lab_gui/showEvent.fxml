            <DropShadow />
         </effect></Button>
      <Button layoutX="9.0" layoutY="361.0" mnemonicParsing="false" onAction="#onLeaveEventClicked" prefHeight="26.0" prefWidth="270.0" text="Leave event">
         <effect>
            <DropShadow />
         </effect></Button>
      <ListView fx:id="allEvents" layoutX="295.0" layoutY="14.0" prefHeight="335.0" prefWidth="291.0">
         <effect>
            <InnerShadow />
         </effect></ListView>
   </children>
</AnchorPane>
