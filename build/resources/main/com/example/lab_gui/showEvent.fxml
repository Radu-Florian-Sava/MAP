<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: MEDIUMSLATEBLUE;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab_gui.ShowEventController">
   <children>
      <TableView fx:id="myEvents" layoutX="9.0" layoutY="14.0" prefHeight="335.0" prefWidth="270.0">
